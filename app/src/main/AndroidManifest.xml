<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.petproject2">

    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_ALARM" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/launchercustomicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetProject2"
        android:windowSoftInputMode="adjustPan|adjustResize">
        <activity android:name=".measurements.MeasurementRecordsListActivity"></activity>
        <activity android:name=".measurements.MeasurementActivity" />
        <activity android:name=".CreateVetNoteActivity" />
        <activity android:name=".CreateNotificationActivity" />
        <activity android:name=".CreatePetPage" />
        <activity android:name=".PetPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.PICK" />
            </intent-filter></activity>
        <activity android:name=".HomePageActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".StartupPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.PICK" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>